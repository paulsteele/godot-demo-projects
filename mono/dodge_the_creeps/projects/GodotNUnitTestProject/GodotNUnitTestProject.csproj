<Project Sdk="Godot.NET.Sdk/3.2.3">

  <PropertyGroup>
    <AssemblyName>GodotNUnitTestProject</AssemblyName>
    <TargetFramework>net472</TargetFramework>
    <RootNamespace>GodotNUnitTestProject</RootNamespace>
  </PropertyGroup>

  <PropertyGroup>
   <OutputPath>../../.mono/tests/bin/$(Configuration)</OutputPath>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.NETFramework.ReferenceAssemblies.net472" Version="1.0.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="16.5.0" />
    <PackageReference Include="NUnit" Version="3.12.0" />

  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Dodge the Creeps with C#.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Directory.Build.props" />
  </ItemGroup>

</Project>
